<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foxconnstore.MainActivity"
    android:orientation="vertical"
    android:background="#2196f3"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#2196f3"
        android:orientation="horizontal"
        >
        <android.support.v17.leanback.widget.SearchEditText
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="#fff"
                androiext="Tìm kiếm"
                />
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="#8bc34a">
            <Button
                android:background="@drawable/ic_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOXCONN STORE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        ></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#607d8b"
                android:elevation="6dp"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                />
            <android.support.v4.view.ViewPager
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.6"
                android:layout_below="@id/tab_layout"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff">
    </View>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_g"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_game1"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_game2"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_game3"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_game"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_game1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Copyright by RD software Foxconn"
            android:textSize="10dp"
            />
        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐC:KCN Đình trám,Hoàng Ninh,Việt Yên,Bắc Giang"
            />
    </LinearLayout>
</LinearLayout>

